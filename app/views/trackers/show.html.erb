
<div class="card bg-dark text-white mt-3" style="width: 18rem;">
  <div class="card-body">

    <h5 class="card-title text-warning">
      <strong>Assignment:</strong>
      <%= @tracker.assignment %>
    </h5>

    <h6 class="card-subtitle mb-3">
  <strong>Course:</strong>
  <%= @tracker.course %>
</h6>
<hr/>


<p class="card-text">
  <strong>Center:</strong>
  <%= @tracker.center %>
</p>

<p class="card-text">
  <strong>Weight:</strong>
  <%= @tracker.weight %>
</p>

